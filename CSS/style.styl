.dropdown
    position absolute
    top 61px
    border 5px solid #dfdfdf
    border-bottom none             
    width 113px
    opacity 0
    display none
    &.edit
        left 326px
    &.insert
        left 459px 
    &.more
        left 592px               
    
    ul
        // display flex
        // flex-direction column
        li
            cursor pointer
            background-color #dfdfdf
            display flex
            align-items center
            width 100%
            height 50px
            border-bottom 5px solid #dfdfdf
            transition background-color 200ms
            &:hover
                background-color #ebebeb
            span
                width 100%
                text-align center
.button.file:hover + .dropdown.file, .dropdown.file:hover, .button.edit:hover + .dropdown.edit, .dropdown.edit:hover, .button.insert:hover + .dropdown.insert, .dropdown.insert:hover, .button.more:hover + .dropdown.more, .dropdown.more:hover
    display block
    opacity 1
    animation-name fadeInDropdown
    animation-duration 400ms
    animation-iteration-count 1
    animation-timing-function ease    
@keyframes fadeInDropdown
    0% 
        display none
        opacity 0
    1%
        display block
    100%
        opacity 1

@keyframes fadeOutDropdown
    0%
        opacity 1
    99%
        opacity 0
    100%
        display none       