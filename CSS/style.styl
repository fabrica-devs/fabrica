/* OVERLAY - FIRST AND LAST THING TO LOAD */
#overlay
    overflow hidden
    width 100vw
    height 100vh
    background-color #ebebeb
    position absolute
    top 0
    z-index 1000
    display flex
    flex-direction column
    h1
        margin 10% auto 0 auto
    p
        margin-top 2%
        width 100%
        text-align center
    .spinner
        align-self center
        width 200px
        height 200px
        border-radius 50%
        position relative
        margin 20% 0
        display inline-block
        &:before, &:after
            content: ''
            display: block
            width: 200px
            height: 200px
            border-radius: 50%
            position absolute
            top 50%
            left 50%
            margin-top -100px
            margin-left -100px
            background orangered
            animation pulse 3s linear infinite
            opacity 0
        &:after
            animation pulse 2s linear 2.3s infinite
    .fabricaLogoImg
        cursor pointer
        margin 40% auto
        width 800px
        transform rotate(25deg)
        transition margin 1s
        &:hover
            margin 20% auto
    
@keyframes pulse{
  from{
    transform: scale(0)
    opacity: 1
  }
  to{
    transform: scale(1.3)
    opacity: 0
  }
}
